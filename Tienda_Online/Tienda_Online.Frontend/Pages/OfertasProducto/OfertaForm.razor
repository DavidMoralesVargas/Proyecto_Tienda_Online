<NavigationLock OnBeforeInternalNavigation="OnBeforeInternalNavigation" />

<EditForm EditContext="_editContext" OnValidSubmit="OnValidSubmit">
    <div class="mb-3">
        <label>Digite el valor de descuento:</label>
        <div>
            <InputNumber style="background:#D9D9D9" class="form-control" @bind-Value="oferta.PrecioOferta" />
            <ValidationMessage For="@(()=>oferta.PrecioOferta)" />
        </div>
    </div>

    <button class="btn btn-primary" style="background:#0D6EFD" type="submit">Guardar cambios</button>
    <button class="btn btn-success" style="background:#14FF00" @onclick="ReturnAction">Regresar</button>
</EditForm>


